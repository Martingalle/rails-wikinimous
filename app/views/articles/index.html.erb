<h1>LeMonde.fr</h1>
<div class="new-article">
  <%= link_to "  Write new article", new_article_path, class: "fas fa-plus-circle"  %>
</div>


<div class="row">
  <% @articles.each do |article| %>
    <div class="article col-xs-12 col-sm-6 col-md-3">
      <h2><%= link_to article.title, article_path(article.id) %></h2>
      <p><%= article.content %></p>
      <%= link_to "delete", "www.google.com" %>
    </div>
  <% end %>
</div>
